{
  "hosting": {
    "public": "public",
    "predeploy": [
      "./scripts/sync_public.sh",
      "./scripts/check_public_sync.sh"
    ],
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "headers": [
      {
        "source": "/",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/index.html",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/app.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/sw.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "/firebase-config.js",
        "headers": [
          { "key": "Cache-Control", "value": "no-cache, no-store, must-revalidate" }
        ]
      },
      {
        "source": "**/*.@(png|jpg|jpeg|gif|ico|svg)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "**/*.@(woff|woff2|ttf|eot)",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=31536000, immutable" }
        ]
      },
      {
        "source": "/styles.css",
        "headers": [
          { "key": "Cache-Control", "value": "public, max-age=86400" }
        ]
      }
    ],
    "rewrites": [
      {
        "source": "/audio_m4a",
        "run": {
          "serviceId": "realtime-translator-api",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/summarize",
        "run": {
          "serviceId": "realtime-translator-api",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/translate",
        "run": {
          "serviceId": "realtime-translator-api",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/token",
        "run": {
          "serviceId": "realtime-translator-api",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "/api/**",
        "run": {
          "serviceId": "realtime-translator-api",
          "region": "asia-northeast1"
        }
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
